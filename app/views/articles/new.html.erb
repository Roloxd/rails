<%= form_with scope: :article,
url: articles_path,local: true do |form| %>
<% if @article.errors.any? %>
<div id="error_explanation">
<h2>
<%= pluralize(@article.errors.count, "error") %>
prohibited this article from being saved:
</h2>
<ul>
<% @article.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul>
</div>
<% end %>

<p><%= form.label :name %><br>
<%= form.text_field :name %></p>
<p><%= form.label :yield %><br>
<%= form.text_field :yield %></p>
<p><%= form.label :ingredients %><br>
<%= form.text_area :ingredients %></p>
<p><%= form.label :recipe %><br>
<%= form.text_area :recipe %></p>
<p><%= form.label :image %><br>
<%= form.file_field :image %></p>
<p><%= form.submit %> </p>
<% end %>

<%= link_to 'Back', articles_path %>

